{% extends 'base.html.twig' %}

{% block title %}Symfony calculator{% endblock %}

{% block body %}

{{ form_start(form) }}

<div class="example-wrapper" id="app">

    <div class="text-center">
        <h3>My Symfony 6 request form</h3>


        <div class="jumbotron text-center">
            <div class="md:flex md:items-center mb-6">
                <div>
                    <label for="carrierId">CarrierID:</label>
                    <input type="number" id="carrierId" name="carrierId" />
                </div>
                <div>
                    <label for="weight">Weight (kg):</label>
                    <input type="number" id="weight" name="weight" />
                </div>
            </div>

                    </br>
                    <button class="btn" type="submit">{{ button_label|default('Calc') }}</button>

        </div>

    </div>
</div>
{{ form_end(form) }}
{% endblock %}
